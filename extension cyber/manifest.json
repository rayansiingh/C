{
  "manifest_version": 3,
  "name": "URL Tracker",
  "version": "1.0",
  "description": "Tracks the URLs of open tabs and appends them to a CSV file.",
  "permissions": ["tabs", "storage", "fileSystem"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "URL Tracker"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
